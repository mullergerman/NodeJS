<div class="container">
  <div class="row align-items-center">

    <div class="col-12 mt-5">
        <h1 style="text-align: center;">Vista de Productos</h1>

        {{#if listExists}}
        <table class="table mt-5">
            <tr>
                <th>Titulo</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>

            {{#each productos}}
                <tr class="align-middle">
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td><img style="width:50px;height:50px;" src="{{this.thumbnail}}"></td>
                </tr>    
            {{/each}}  

        {{else}}
          <div class="card-body mt-5 bg-info bg-gradient d-flex align-items-center justify-content-center">
            No se ha ingresado ningun producto
          </div>
        {{/if}}
              
        </table>
    </div>

    <form action="/">
        <input type="submit" class="btn btn-success mt-5" value="Ingresar Nuevo Producto" style="width: 100%;"/>
    </form>
    


  </div>
</div>
