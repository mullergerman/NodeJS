{{#if listExists}}
<br>

    {{#each carritos}}
        <div class="card">
            <div class="card-header">
                 <div class="row">
                    <div class="col-sm-auto">
                        <img src="https://cdn4.iconfinder.com/data/icons/plastic-iconshock/256/Shopping_cart.png" width="80" alt={{this.nombre}}>
                    </div>
                    <div class="col-sm-auto ">
                        <ul>
                            <li><strong>ID: </strong>{{this.id}}</li>
                            <li><strong>TimeStamp: </strong>{{this.timestamp}}</li>
                            <li><a id="deleteCarrito" href="#" onclick="DeleteCarrito({{this.id}});return false;">Eliminar Carrito!</a></li>
                        </ul>
                    </div>
                </div> 

            </div>
            <div class="card-body">
            <div class="row row-cols-1 row-cols-md-5 g-4">
                <div class="col d-flex align-items-stretch">
                    <div class="card">
                        <div class="card-header" style="background-color: #1059b8;">
                        <h5 style="text-align: center; color:white"><strong>Agregar Producto</strong></h5>
                        </div>
                        <img src="https://cdn0.iconfinder.com/data/icons/basic-e-commerce-line-color/48/Package_box_add-256.png" style="img-responsive;center-block" class="card-img-top" alt={{this.nombre}}>
                        <div class="card-body">          
                        <p class="card-text">Agregar Producto al Carrito</p>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <button type="button" onclick="AddProduct(this)" id={{this.id}} class="btn btn-primary btn-sm mt-auto">Insertar</button>
                        </div>
                        </div>
                    </div>
                </div>
            {{#each this.productos}}
                <div class="col d-flex align-items-stretch">
                    <div class="card">
                        <div class="card-header" style="background-color: #019e5d;">
                            <h5 style="text-align: center; color:white"><strong>{{this.nombre}}</strong></h5>
                        </div>
                        <img src={{this.foto}} style="img-responsive;center-block" class="card-img-top" alt={{this.nombre}}>
                        <div class="card-body d-flex flex-column">          
                            <p class="card-text">{{this.descripcion}}</p>
                            <ul>
                                <li><strong>Precio: </strong>${{this.precio}}</li>
                                <li><strong>Codigo: </strong>{{this.codigo}}</li>
                                <li><strong>Stock: </strong>{{this.stock}}</li>            
                            </ul>                            
                            <button type="button" onclick="RemoverProducto(this,{{../id}})" class="btn btn-danger btn-sm mt-auto" id="{{this.id}}">Remover</button>
                        </div>
                    </div>
                </div>
            {{/each}}
            </div>
            </div>
        </div>
        <br>
    {{/each}} 





</div>
<br>

{{else}}
  <div class="card-body mt-5 bg-info bg-gradient d-flex align-items-center justify-content-center">
    No se ha ingresado ningun producto
  </div>
{{/if}}