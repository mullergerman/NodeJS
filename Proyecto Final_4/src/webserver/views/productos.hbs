<div class="container">
  <br>

  <div class="row align-items-center border border-success bg-success rounded">
    <div class="col-12">
      <div class="mt-3"></div>
      <h3 style="text-align: center; color:white"><strong>Catalogo de Productos</strong></h5>
      <div class="mb-3"></div>
    </div>
  </div>
  <br>

  <div class="row align-items-center border border-success rounded">
    <div class="col-12">
      <br>
      <h5>Productos disponibles para su compra</h5>
      <div class="overlay" id="spinner">
        <div class="d-flex justify-content-center">  
          <div class="spinner-grow text-success" role="status" style="width: 10rem; height: 10rem; z-index: 20;">
          </div>
        </div>
      </div>

      <div id="vista-productos">

        <br>
        <div class="row row-cols-1 row-cols-md-5 g-4">
          {{#if listExists}}
          
          {{#each productos}}
            <div class="col d-flex align-items-stretch">
              <div class="card w-100">
                <div class="card-header" style="background-color: #019e5d;">
                  <h5 style="text-align: center; color:white"><strong>{{this.nombre}}</strong></h5>
                </div>
                <img src={{this.foto}} style="img-responsive;center-block" class="card-img-top" alt={{this.nombre}}>
                <div class="card-body d-flex flex-column">          
                  <p class="card-text">{{this.descripcion}}</p>
                  <ul>
                    <li><strong>Precio: </strong>${{this.precio}}</li>
                    <li><strong>Categoria: </strong>{{this.categoria}}</li>
                    <li><strong>Descripcion: </strong>{{this.descripcion}}</li>
                  </ul>
                  <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-auto">
                      <button type="button" onclick="AddProductIntoCart(this)" class="btn btn-success btn-sm mt-2" id="{{this.id}}">Agregar al Carrito</button>
                  </div>
                </div>
              </div>
            </div>
          {{/each}} 

          {{else}}
            <div class="card-body mt-5 d-flex align-items-center justify-content-center">
              No hay productos disponibles actualmente.
            </div>
          {{/if}}
        </div>
        <br>


      </div>
    </div>
    <span class="mt-2"></span>
  </div>

  <br>
</div>
